<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Course name"
        android:id="@+id/ET_name"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="150dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Course duration"
        android:layout_marginLeft="150dp"

        android:layout_alignBottom="@+id/ET_name"
        android:layout_marginBottom="-90dp"
        android:id="@+id/ET_dur"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Course Track"
        android:layout_marginLeft="150dp"

        android:layout_alignBottom="@+id/ET_dur"
        android:layout_marginBottom="-90dp"
        android:id="@+id/ET_track"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Course Descrip"
        android:layout_marginLeft="150dp"

        android:layout_alignBottom="@+id/ET_track"
        android:layout_marginBottom="-90dp"
        android:id="@+id/ET_descrip"
        />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_alignBottom="@+id/ET_descrip"
        android:layout_marginBottom="-90dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/butt"
        android:onClick="onRegister"
        />



</RelativeLayout>